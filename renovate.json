{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:recommended"
    ],
    "ignorePresets": [
        ":prHourlyLimit2"
    ],
    "platformAutomerge": true,
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "matchPackageNames": [
                "tokio"
            ],
            "ignoreUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ]
        }
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "rangeStrategy": "bump",
    "forkProcessing": "enabled"
}
